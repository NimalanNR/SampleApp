<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddRoom">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <android.support.v7.widget.CardView
            android:layout_width="335dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="5dp"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtview_roomname"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:text="Room Name"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/edittxt_roomname"
                        android:hint="Enter Room Name"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <android.support.v7.widget.CardView
            android:layout_width="335dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="5dp"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtview_roomtype"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:text="Room Type"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinner_selectroom"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <android.support.v7.widget.CardView
            android:layout_width="335dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="5dp"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtview_description"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:text="SHORT DESCRIPTION (OPTIONAL)"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/edittxt_description"
                        android:hint="Enter Description"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_bg_rounded_corners"
        android:width="60dp"
        android:text="create room"/>

</LinearLayout>



